#
# The program's main version...
#
VERSION = @VERSION@
MAJOR = @MAJOR@

#
# Default installation root...
#
prefix = @prefix@

#
# tools used for compiling / installing...
#
CXX = @CXX@
AR = @AR@
PRELINK = @PRELINK@
HAS_MM = @HAS_MM@
INSTALL = @INSTALL@
DOXYGEN = @DOXYGEN@
O = .o
E = 
A = .a
D = .so

NAME = libCxxUtils
TARGET = $(NAME)$A

#
# Name of target object files:
#
MAIN = utilsmain
OBJS = CDebug$O Getopt$O MMatrix$O MMatrix4x4$O MPoint$O MPoint2D$O \
	MPoint3D$O MPoint4D$O MTuple$O MVector$O MVector2D$O MVector3D$O \
	MVector4D$O StringTok$O mutil$O utils$O getopt_wrapper$O
MAINOBJ = $(MAIN)$O
SOURCES = $(OBJS:$O=.cc) $(MAINOBJ:$O=.cpp)
DEPENDS = $(SOURCES:.cc=.dd)
HEADERS = $(wildcard *.h *.hh *.ih)
TEMPLATES = $(shell grep -l _CC *.cc)

LIBS = 
BINDIR = $(prefix)/bin
LIBDIR = $(prefix)/lib
INCDIR = $(prefix)/include/cxxutils
DOCDIR = $(prefix)/doc
MANDIR = $(prefix)/man

#
# Flags passed to the compiler
#
CPPFLAGS = @CPPFLAGS@ -I.. -I. @DEFINES@
CXXSHARED = 
CXXDEBUG = @CXXDEBUG@
CXXOPT = @CXXOPT@
CXXWARN = @CXXWARN@ @CXXWARN2@ 
LDFLAGS = @LDFLAGS@ -lm 
CXXFLAGS = $(CPPFLAGS) $(CXXSHARED) $(CXXOPT) $(CXXDEBUG) $(CXXWARN) @CXXMISC@

.PHONY : all complete test install uninstall clean distclean debug tar shared

#
# Main target and file dependencies:
#

all: $(TARGET)

shared:
	$(MAKE) -e LIB=libcxxutils$D CXXSHARED=-fPIC

complete: all test 

debug:
	$(MAKE) "CXXDEBUG=-g -DDEBUG" all $(MAIN)$E

test: $(MAIN)$E
	./$<

$(MAIN)$E: $(MAINOBJ) $(TARGET)
	$(CXX) $^ -o $@ $(LDFLAGS)

clean: 
	rm -f $(OBJS) $(DEPENDS) $(TARGET) $(MAIN)$E $(MAINOBJ) *~ */*~ .\#*.[0-9]*  \
	$(NAME)$D* doxy.log warnings.log

distclean: 
	-$(MAKE) clean
	-rm -f config.cache config.status config.log Makefile 

tar: cxxutils-$(VERSION).tar.gz

cxxutils-$(VERSION).tar.gz: clean
	rm -f $@
	PWD=`pwd`; DIR=`basename $$PWD`; cd ..; find $$DIR -type f | \
	egrep -v "CVS|autom4te\.cache|config\.status|config\.log" | \
	xargs tar czvf $$DIR/$@

ifdef DOXYGEN
doc: 
	$(DOXYGEN) Doxyfile | tee doxy.log
	( grep -A 4 "Warning:" doxy.log || true ) >warnings.log
endif


$(NAME)$A: $(OBJS)
ifdef PRELINK
	$(PRELINK) $^
endif
	$(AR) crs $@ $^

$(NAME)$D: $(OBJS)
	$(CXX) $^ -shared -Wl,-soname,$*$(D).$(MAJOR) -o $*$(D).$(VERSION)
	ln -sf $*$(D).$(VERSION) $*$(D).$(MAJOR)
	ln -sf $*$(D).$(MAJOR) $*$(D)

install: $(PROGRAM)
	install -d -m 775 $(DESTDIR)$(INCDIR)
	install -m 664 $(HEADERS) $(DESTDIR)$(INCDIR)
	install -m 664 $(TEMPLATES) $(DESTDIR)$(INCDIR)
	install -d -m 775 $(DESTDIR)$(prefix)/lib
	if [ -f $(NAME)$A ]; then \
	  install -m 664 $(NAME)$A $(DESTDIR)$(prefix)/lib; \
	fi
	if [ -f $(NAME)$D.$(VERSION) ]; then \
	  install -m 775 $(NAME)$D.$(VERSION) $(DESTDIR)$(prefix)/lib; \
	  ln -sf $(NAME)$D.$(VERSION) $(DESTDIR)$(prefix)/lib/$(NAME)$D.$(MAJOR); \
	  ln -sf $(NAME)$D.$(MAJOR) $(DESTDIR)$(prefix)/lib/$(NAME)$D; \
	fi

uninstall: $(PROGRAM)
	rm -f $(DESTDIR)$(prefix)/lib/$(NAME)$A
	rm -f $(DESTDIR)$(prefix)/lib/$(NAME)$D
	rm -f $(DESTDIR)$(prefix)/lib/$(NAME)$D.$(MAJOR)
	rm -f $(DESTDIR)$(prefix)/lib/$(NAME)$D.$(VERSION)
	rm -rf $(DESTDIR)$(INCDIR)

#
# Automatic targets and rules:
#
%$O: getopt/%.c
	$(CC) -Igetopt -I. -c $(CXXSHARED) $(CPPFLAGS) $< -o $@

%$O: %.cc
	$(CXX) -c $(CXXFLAGS) $< -o $@

%.dd: %.cc
	@$(SHELL) -ec '$(CXX) -MM $(CPPFLAGS) $< \
	| sed '\''s/\($*\)\.o[ :]*/\1.o $@ : /g'\'' > $@; \
	[ -s $@ ] || rm -f $@'

ifeq (yes,${HAS_MM})
-include $(DEPENDS)
endif
